	<!-- form 태그 안 input태그는 name 속성을 지정하는데, name은 서버에서 찾아쓰게 된다 -->
	<form>
	
		아이디:<input type="text" name="id"><br>
		비밀번호:<input type="password" name="id"><br>
		
		<!-- checkbox, radio속성도 name을 사용해서, 하나의 그룹으로 묶어준다 -->
		관심분야:
		<input type="checkbox" name="inter"> java
		<input type="checkbox" name="inter">jsp
		<input type="checkbox" name="inter">database <!-- ctrl alt 아래로 복사 -->
		<input type="checkbox" name="inter">python
	
		전공분야:
		<input type="radio">
	
	
	</form>
	
	
