
1. 처음 시작은 디자인

2. 계정 만들기

CREATE USER JSP IDENTIFIED BY JSP; --계정 생성

GRANT RESOURCE, CONNECT TO JSP; -- 권한 부여

ALTER USER JSP DEFAULT TABLESPACE USERS QUOTA UNLIMITED ON USERS;  --데이터 스페이스 생성하기


그 후 새계정 만들기




--연관 관계 맺어주기
CREATE TABLE USERS (
    ID VARCHAR2(30),
    PW VARCHAR2(30) NOT NULL,
    NAME VARCHAR2(30) NOT NULL,
    EMAIL VARCHAR2(30),
    GENDER CHAR(1),
    REGDATE DATE DEFAULT SYSDATE
);

--제약
ALTER TABLE USERS ADD CONSTRAINT USERS_ID_PR PRIMARY KEY (ID);
ALTER TABLE USERS ADD CONSTRAINT USERS_GENDER CHECK (GENDER IN ( 'F', 'M'));

ALTER TABLE USERS ADD CONSTRAINT USERS_GENDER_CK CHECK (GENDER IN ('F', 'M'));




DROP TABLE USERS;


SELECT * FROM USERS WHERE ID= 'AAA';



SELECT * FROM USERS;

SELECT * FROM USERS WHERE ID = 'aaaa' AND PW = 'aaaa';

SELECT * FROM USERS WHERE ID = 'aaaa';






